{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": false,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@src/*": ["src/*"]
		}
	},
	"exclude": [
		"src/Config/config.example.ts",
		"node_modules",
		"dist"
	]
}
